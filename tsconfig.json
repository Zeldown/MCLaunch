{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",

        "module": "CommonJS",
        "target": "esnext",

        "noEmitOnError": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true
    },
    "include": [
        "src/**/*.ts"
    ]
}